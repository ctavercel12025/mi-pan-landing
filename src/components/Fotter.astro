---
import instagramLogo from '../assets/instagram.png';
import facebookLogo from '../assets/facebook.png';
---

<div class="flex flex-col md:flex-row justify-between items-center p-5 text-white" style="background-color: #E32826;">
    <div>
        <p>Mi Pan {new Date().getFullYear()}</p>
    </div>
    <div class="flex space-x-4 mt-4 md:mt-0">
        <a href="https://www.instagram.com/mipan.mx/">
            <img src={instagramLogo.src} alt="Instagram" width="20" />
        </a>
        <a href="https://www.facebook.com/MiPan.mx">
            <img src={facebookLogo.src} alt="Facebook" width="20" />
        </a>
    </div>
    <div class="flex space-x-4 mt-4 md:mt-0">
        <ul class="flex space-x-4 underline">
            <li><a href="/privacy">Politicas de privacidad</a></li>
        </ul>
    </div>
</div>