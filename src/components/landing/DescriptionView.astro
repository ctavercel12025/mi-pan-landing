---
import { Image } from 'astro:assets';
import MiPanText from '../../assets/mi_pan_text.png';
import ConchasPortada from '../../assets/mipan/jPark_MiPan_36.jpg';
import Gil from '../../assets/mipan/Gil2.png';
import DonasGlass from '../../assets/mipan/donaglass.png';
import ChocoCapuchino from '../../assets/mipan/chococapuchinoface.png';
import { FilesService } from '../../services/files';
import Loading from '../../assets/loader.gif';

---

<div class="container-elements">
    <div class="min-h-svh content-center">
        <div class="p-3">
            <div class="flex justify-center items-center">
                <Image src={MiPanText} alt="Mi pan"
                       class={"w-1/2 md:w-2/2"}
                       loading={"eager"}
                />
            </div>
            <div class="text-center">
                <div>
                    En Mi Pan seleccionamos lo mejor para ofrecerte productos de
                    alta calidad
                </div>
                <div>
                    y de alto nivel nutricional. Es firme a sus raíces panaderas
                    horneando el
                </div>
                <div>
                    mejor pan usando ingredientes naturales y procesos muy cuidados.
                </div>
                <br />
                <p>Pan preparado con tradición y sabor.</p>
            </div>
        </div>
    </div>

    <div class="grid md:grid-cols-2 color-primary p-5 min-h-svh" id="about_of">
        <div class="center-image p-7">
            <Image src={ConchasPortada} alt="demo" class="object-cover h-3/5"/>
        </div>
        <div class="content-center text-white">
            <p class="title pb-8">Nuestra Historia</p>
            <p>
                Nuestro pan nace en 1976 como una panadería tradicional
                Mexicana.
            </p>
            <p>
                En 1992 se realiza una nueva proyección e imagen con el nombre
                comercial de Mi Pan. Por mas de 30 años hemos realizado pan
                artesanal, real y auténtico.
            </p>
            <br />
            <p>
                No importa cuanto cambie el mundo, el pan ha sido y siempre será
                parte de nuestro día a día.
            </p>
            <br />
            <p>Honor a la tradición</p>
        </div>
    </div>

    <div class="grid md:grid-cols-3 grid-cols-1 justify-items-center p-5 content-center" id="services" >
        <div class="container_image m-3 min-h-lvh flex items-center justify-center">
            <Image src={Gil} alt="demo" class="h-3/5 w-98 object-cover"/>
            <div class="text-centered text-center">
                <p class="text-2xl font-bold">Postres</p>
                <p>Para disfrutar</p>
            </div>
        </div>

        <div class="container_image m-3 min-h-lvh flex items-center justify-center">
            <Image src={ChocoCapuchino} alt="demo" class="h-3/5 w-98 object-cover"/>
            <div class="text-centered text-center">
                <p class="text-2xl font-bold">Pasteles</p>
                <p>Para celebrar</p>
            </div>
        </div>

        <div class="container_image m-3 min-h-lvh flex items-center justify-center">
            <Image src={DonasGlass} alt="demo" class="h-3/5 w-98 object-cover"/>
            <div class="text-centered text-center">
                <p class="text-2xl font-bold">Panadería</p>
                <p>Para compartir</p>
            </div>
        </div>
    </div>

    <div class="grid md:grid-cols-2 justify-center p-5 md:content-center" id="contact">
        <div class="w-full justify-items-center">
            <form class="md:w-full p-5 w-full" action="" method="post">
                <div class="card">
                    <div class="grid grid-cols-2">
                        <div class="p-5">
                            <label for="name"></label><input
                                required
                                placeholder="Nombre (requerido)"
                                type="text"
                                id="name"
                                name="name"
                        />
                        </div>
                        <div class="p-5">
                            <label for="email"></label><input
                                placeholder="Correo (requerido)"
                                type="email"
                                id="email"
                                name="email"
                                required
                        />
                        </div>
                    </div>
                    <div class="p-5">
                        <label for="message"></label><textarea placeholder="Mensaje" id="message" name="message"
                    ></textarea>
                    </div>
                    <div class="p-5">
                        <button class="btn-send" type="submit">Enviar</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="w-full justify-items-center">
            <div class="p-3 w-full h-full">
                <p class="title">Contactanos</p>
                <p>Telefono: 55 2451 0101</p>
                <p>Correo: recursoshumanos@grupomipan.com / capacitacionrh@grupomipan.com</p>
                <p>Dirección: Av. de los Ejidos No. 278, Col. Reyes Ixtacala, Estado de México, Mexico.</p>
                <div class="w-full p-3">
                    <iframe
                            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3762.073292073073!2d-99.1925817845639!3d19.52153038681868!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x85d202ab2912b989%3A0xf5107db38c4367fa!2sMi%20Pan%20Tlalnepantla!5e0!3m2!1ses-419!2smx!4v1629783660004!5m2!1ses-419!2smx"
                            loading="lazy"
                            width="100%"
                            height="450"
                    ></iframe>
                </div>
            </div>
        </div>
    </div>

    <div id="panes" class="grid md:grid-cols-4 gap-4 min-h-svh"></div>

    <div id="load-more-container" class="flex justify-center mt-4">
        <button id="load-more" style="color: #E32826" class="font-bold py-2 px-4 rounded">Ver más</button>
    </div>
    <div class="h-56 content-center">
        <div class="text-center">
            <p class="text-2xl font-bold primary-text">Mi Pan</p>
        </div>
    </div>
    <style>
        :root{
            --primary-color: #E32826;
        }
        .color-primary{
            background-color: var(--primary-color);
        }

        .primary-text{
            color: var(--primary-color);
        }

        .title {
            font-size: 2rem;
            font-weight: bold;
        }

        .title-1 {
            font-size: 6rem;
            font-weight: bold;
        }

        .center-image {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        /* Css coursel images */
        .container_image {
            position: relative;
            text-align: center;
            color: white;
        }

        .container_image img {
            filter: brightness(70%);
        }

        .text-centered {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }

        #name,
        #email {
            width: 200%;
            padding: 10px;
            margin: 5px 0;
            border: 1px solid #ccc;
        }

        #message {
            width: 200%;
            height: 120px;
            padding: 10px;
            margin: 5px 0;
            border: 1px solid #ccc;
        }

        .btn-send {
            padding: 10px 20px;
            background-color: var(--primary-color);
            color: white;
            border: none;
            cursor: pointer;
            border-radius: 5px;
            width: 100%;
        }

        .card {
            border-radius: 10px;
            border: 1px solid #ccc;
        }

        .card input, textarea {
            max-width: 100%;
        }

        .img-center {
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: aliceblue;
        }

        .history-image {
            max-width: 80%;
            height: auto;
        }

        @media (max-width: 768px) {
            .history-image{
                max-width: 100%;
            }

        }
    </style>
</div>

<script>
    import { FilesService } from '../../services/files';
    import Loading from '../../assets/loader.gif';

    const fileService = new FilesService();

    let panes: Array<any> = [];
    let visibleProducts = 20; // Initially display 20 products

    function adjustImageSizes() {
        const isSmallScreen = window.innerWidth <= 768;
        const images: any = document.querySelectorAll('#panes img');
        images.forEach((img: any) => {
            if (isSmallScreen) {
                img.style.width = '200%';
                img.style.height = 'auto';
                img.classList.add('p-6');
                img.classList.add('mb-4');
            } else {
                img.style.width = img.getAttribute('data-width');
                img.style.height = img.getAttribute('data-height');
            }
        });
    }

    async function loadProducts() {
        const panesContainer = document.getElementById("panes");
        if (!panesContainer) return;

        const response = await fileService.getCatalog();
        panes = response.data.filter((pane: any) => pane.name !== "");
        renderProducts(panesContainer);
    }

    function renderProducts(container: any) {
        const fragment = document.createDocumentFragment();
        panes.slice(0, visibleProducts).forEach((pane, index) => {
            const div = document.createElement("div");
            div.classList.add("flex", "flex-col", "items-center", "justify-center", "text-center", "w-full", "md:w-auto");
            div.innerHTML = `
                <img async src="${Loading.src}" data-src="${pane.image}" alt="${pane.name}" class="mb-2 w-1/2 md:w-1/3" onload="this.src=this.getAttribute('data-src')" />
                <p class="text-xl">${pane.name}</p>
            `;
            fragment.appendChild(div);
        });
        container.innerHTML = '';
        container.appendChild(fragment);

        adjustImageSizes();

        // Hide or show the "Ver más" button based on the number of visible products
        const loadMoreButton: any = document.getElementById("load-more");
        if (visibleProducts >= panes.length) {
            loadMoreButton.style.display = 'none';
        } else {
            loadMoreButton.style.display = 'block';
        }
    }

    document.addEventListener("DOMContentLoaded", loadProducts);

    document.getElementById("load-more").addEventListener("click", () => {
        visibleProducts += 20; // Load 20 more products
        renderProducts(document.getElementById("panes"));
    });
</script>